
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/_LayoutAdmin.cshtml";
}

<h1>Kategoriler</h1>
<a href="/admin/Kategoriler/Insert" class="btn btn-primary" style="margin-top:15px;">Ekle</a>
<div class="border col-md-12" style="margin-top:15px;">
    <table class="table table-bordered">
            <tr>
            <td>#</td>
            <td>Kategori</td>
            <td>Durumu</td>
            <td>İşlemler</td>
            </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@Html.Raw(item.Status == true ? "Satışta" : "Satışa Kapalı")</td>
                <td>
                    <a href="/admin/Kategoriler/Update/@item.Id" class="btn btn-primary" >Düzenle</a>
                    <a href="/admin/Kategoriler/Delete/@item.Id" class="btn btn-danger" >Sil</a>
                </td>
            </tr>            
        }
    </table>
    <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;text-align:center;">
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">İşlem Başarılı</div>
        }
    </div>
</div>

