@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/admin/Views/_LayoutAdmin.cshtml";
}



<h1>Ürün Güncelleme Ekranı</h1>
    <a href="/admin/Urunler" style="margin-top:15px;" class="btn btn-primary"> ÜRÜNLER </a>

    <form action="/admin/Urunler/Update/@Model.Id" method="post" enctype="multipart/form-data">

        <input name="ImagesName" value="@Model.ImagesName" hidden />

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
            <label>Ürün Resmi</label>
            <input type="file" class="form-control" name="Dosya"/>
        </div>

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
            <label>Ürün Adı</label>
            <input type="text" class="form-control" name="Name" value="@Model.Name"/>
        </div>

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
            <label>Kategoriler</label>
            <select name="CategoriesId" class="form-control">
                @foreach (var item in ViewBag.Kategori)
                {
                     @if (@item.Id == Model.CategoriesId)
                     {
                            <option value="@item.Id">@item.Name</option>
                     }
                }
                @foreach (var item in ViewBag.Kategori)
                {
                     @if (@item.Id != Model.CategoriesId)
                     {
                            <option value="@item.Id">@item.Name</option>
                     }
                }
            </select>
        </div>

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
            <label>Ürün Fiyatı</label>
            <input type="text" class="form-control" name="Price" value="@Model.Price"/>
        </div>

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
            <label>Ürün İndirimli Fiyatı</label>
            <input type="text" class="form-control" name="Discount" value="@Model.Discount" required/>
        </div>

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
            <label>Stok</label>
            <input type="text" class="form-control" name="Stock" value="@Model.Stock" required />
        </div>

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
            <label>Açıklama</label>
            <textarea type="text" class="form-control" name="Explanation"> @Model.Explanation </textarea>
        </div>

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;">
            <label>Ürün Durumu</label>
            <select name="Status" class="form-control">
                 @if (Model.Status == true)
                {
                    <option value="True">Satışta</option>
                    <option value="False">Satışa Kapalı</option>
                }
                else
                {
                    <option value="False">Satışa Kapalı</option>
                    <option value="True">Satışta</option>                
                }
            </select>
        </div>

        <div class="col-md-12" style="margin-top:5px; margin-bottom:5px;text-align:center;">
            <button type="submit" class="btn btn-success">Güncelle</button>
        </div>

        <div class="col-md-12" style="margin-top:5px;margin-bottom:5px;text-align:center;">
            @if (ViewBag.Message == null)
            {                
            }
            else if (ViewBag.Message == 1)
            {
                <div class="alert alert-success">İşlem Başarılı</div>
            }
            else
            {
                <div class="alert alert-danger">İşlem Başarısız</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
        </div>

    </form>


