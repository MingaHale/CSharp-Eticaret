<div class="container" style="margin-top:30px">
    <div class="row">
		<div class="col-md-4 col-md-offset-4">
    		<div class="panel panel-default">
			  	<div class="panel-heading">
			    	<h3 class="panel-title">Müşteri Giriş Ekranı</h3>
			 	</div>
			  	<div class="panel-body">
			    	<form action="/Musteri/Index" method="post">
                    <fieldset>
			    	  	<div class="form-group">
			    		    <input class="form-control" placeholder="E-mail" name="email" type="text">
			    		</div>
			    		<div class="form-group">
			    			<input class="form-control" placeholder="Şifreniz" name="password" type="password" value="">
			    		</div>
			    		<input class="btn-success form-control" type="submit" value="Güvenli Giriş">
						<a href="/Musteri/Uyeol" class="btn-info form-control" style="margin-top:15px;text-align:center"> Üye Ol</a>
			    	</fieldset>
			      	</form>
					  @if (ViewBag.Error != null)
					{
						<div class="alert alert-danger" style="margin-top:25px;">@ViewBag.Error</div>
					}
					 
			    </div>
			</div>
		</div>
	</div>
</div> 