<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"/>
    <script src="~/bootstrap/js/bootstrap.min.js" type="text/javascript"></script> 
    <script src="~/jquery/jquery.js" type="text/javascript"></script>
    <script src="~/SepetScript.js" type="text/javascript"></script>
    <script src="~/jquery/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/jquery/jquery.validate.unobtrusive.js" type="text/javascript"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container" style="margin-top:15px;">
        <div class="row">

            
            <nav class="navbar navbar-inverse">
              <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand" href="/">SHOES</a>
                </div>
                <ul class="nav navbar-nav">
                  <li class="active"><a href="/">Anasayfa</a></li>    
                  @await Component.InvokeAsync("Menuler")
                </ul>
                <ul class="nav navbar-nav navbar-right">
                     <li><a href="/Sepetim"><span class="glyphicon glyphicon-tags" style="margin-right:5px"></span> Sepetim</a></li>

                     @if (User.Identity.IsAuthenticated)
                     {
                            <li><a href="/"><span class="glyphicon glyphicon-log-in" style="margin-right:5px"></span>@User.Identity.Name</a></li>
                     }
                     else
                     {
                            <li><a href="/Musteri"><span class="glyphicon glyphicon-log-in" style="margin-right:5px"></span>Giriş Yap</a></li>
                     }

                     @if (User.Identity.IsAuthenticated)
                     {
                            <li><a href="/Musteri/Cikis"><span class="glyphicon glyphicon-log-in" style="margin-right:5px"></span>Çıkış</a></li>
                     }
                </ul>                   
              </div>
            </nav>
  

        </div>
    </div>

    <div>
        @RenderBody()
    </div>
</body>
</html>
